{
  "include": [
    "./src/**/*.ts"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "build",
    "lib": [
      "es6"
    ],
    "types": [
      "reflect-metadata"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
